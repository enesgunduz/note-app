rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write to users collection
    // This allows friend functionality to work properly
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Users can read and write notebooks they created OR are shared with
    match /notebooks/{notebookId} {
      allow read: if request.auth != null && 
        (resource.data.createdBy == request.auth.uid || 
         request.auth.uid in resource.data.sharedWith ||
         request.auth.token.email.lower() in resource.data.sharedWith);
         
      allow write: if request.auth != null && 
        (resource.data.createdBy == request.auth.uid || 
         request.auth.uid in resource.data.sharedWith ||
         request.auth.token.email.lower() in resource.data.sharedWith);
         
      allow create: if request.auth != null;
      
      allow delete: if request.auth != null && 
        resource.data.createdBy == request.auth.uid;
    }
    
    // Users can read and write notes in notebooks they have access to
    match /notebooks/{notebookId}/notes/{noteId} {
      allow read, write: if request.auth != null;
    }
  }
}
